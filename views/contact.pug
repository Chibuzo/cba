extends layout

block styleBlock 
    style.
        .contact { padding: 12px; margin: auto; border-radius: 50%; height: 90px; width: 90px; margin-bottom: 15px }

        .contact .zmdi { font-size: 50px }

block content 

    .banner-area-wrapper
        .banner-area.text-center
            .container
                .row
                    .col-12
                        .banner-content-wrapper
                            .banner-content
                                h2 Contact us

    .about-area.pb-50.pt-80
        .container
            .row.text-center.justify-content-md-center 
                .col-md-9 
                    .row
                        .col
                            .contact
                                i.zmdi.zmdi-phone
                            p +44 7306 461 984
                            | +234 7032 375 495
                        .col 
                            .contact
                                i.zmdi.zmdi-email.align-middle
                            p connect@decareerbuilders.com
                            | www.decareerbuiders.com
                        .col 
                            .contact
                                i.zmdi.zmdi-home
                            p 16, Rockford Place, Ettingshall. Wolverhampton. United Kingdom

    .container
        .row.justify-content-md-center
            .col-md-9.col-sm-12.col-xs-12.mt-4.mb-5.bg-light.px-5.py-5
                form(method="post" action="/send-contact-email").mt-2
                    .mb-3.row 
                        .col
                            label.form-label Name <sup>*</sup>
                            input.form-control(type="text" name="name" required)
                        .col
                            label.form-label Email <sup>*</sup>
                            input.form-control(type="email" name="email" required)
                    .mb-3.row 
                        .col 
                            label.form-label Subject <sup>*</sup>
                            input.form-control(type="text" name="subject" required)
                        .col
                            label.form-label Phone <sup>*</sup>
                            input.form-control(type="text" name="phone" required)
                    .mb-3 
                        label.form-label Message <sup>*</sup>
                        textarea.form-control(name="message" rows="8" required)
                    .mb-5
                        button.btn.btn-danger.float-end(type="submit") Send Message




